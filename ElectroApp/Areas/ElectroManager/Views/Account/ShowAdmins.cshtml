@model List<AppUser>
@{ ViewData["Title"] = "Index"; }
<div class="container">
    <h4>All Admins</h4>
    <table class="table table-dark mt-3">
        <thead>
            <tr>
                <th>
                    Fullname
                </th>
                <th>
                    Username
                </th>
                <th>
                    Email
                </th>
                <th>
                    Settings
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var admin in Model)
            {
            <tr>
                <td>
                    @admin.Fullname
                </td>
                <td>
                    @admin.UserName
                </td>
                <td>
                    @admin.Email
                </td>
                <td>
                    <a asp-controller="account" asp-action="DeleteAdmin" asp-area="ElectroManager" asp-route-id="@admin.Id" class="btn btn-danger btn-icon-text">
                        <i class="fas fa-edit"></i>
                        Delete
                    </a>
                </td>
            </tr>}

        </tbody>
    </table>
</div>

