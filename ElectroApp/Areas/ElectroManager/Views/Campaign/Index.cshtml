@model List<Campaign>
@{ ViewData["Title"] = "Index"; }

<div class="container">
    <div class="d-flex" style="justify-content:flex-end">
        <a asp-controller="campaign" asp-action="create" class="btn btn-primary btn-icon-text mt-3">
            <i class="mdi mdi-upload btn-icon-prepend"></i>
            Create
        </a>
    </div>

    <table class="table table-dark mt-3">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    What For
                </th>
                <th>
                    Discount Percent
                </th>
                <th>
                    Product Count
                </th>
                <th>
                    Settings
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Campaign campaign in Model)
            {
            <tr>
                <td>
                    @campaign.Id
                </td>
                <td>
                    @campaign.WhatFor
                </td>
                <td>
                    @campaign.DiscountPercent%
                </td>
                <td>
                    @campaign.Products.Count
                </td>
                <td>
                    <a asp-controller="campaign" asp-action="edit" asp-route-id="@campaign.Id" class="btn btn-primary btn-icon-text ">
                        <i class="fas fa-edit"></i>
                        Edit
                    </a>
                    <a asp-controller="campaign" asp-action="delete" asp-route-id="@campaign.Id" class="btn btn-primary btn-icon-text delete-item">
                        <i class="fas fa-trash-alt"></i>
                        Delete
                    </a>

                </td>
            </tr>}

        </tbody>
    </table>
</div>

@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
    $(".delete-item").click(function (e) {
            e.preventDefault();

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    var link = $(this).attr("href");
                    fetch(link).then(response => response.json()).then(data => {
                        if (data.status == 200) {
                            location.reload(true)
                        }
                        else {
                            Swal.fire(
                                'Campaign not found!',
                                'Your file can not be deleted.',
                                'Failed'
                            )
                        }
                    }

                    );

                }
            })
        })</script>
}