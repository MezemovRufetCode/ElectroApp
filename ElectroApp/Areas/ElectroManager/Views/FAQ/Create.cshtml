@model FAQ
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h2 class="mt-3">Create FAQ</h2>
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    <form class="mt-3" method="post">
        <div class="mb-3">
            <label asp-for="@Model.Question" class="form-label">Question</label>
            <input asp-for="@Model.Question" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.Question"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Answer" class="form-label">Answer</label>
            <input asp-for="@Model.Answer" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.Answer"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}