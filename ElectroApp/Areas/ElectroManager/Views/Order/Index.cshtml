@model List<Order>
@{
    ViewData["Title"] = "Index";
}

<style>
    .status {
        width: 120px;
    }
    .status p {
        color: black !important;
        font-size: 18px;
        font-weight: bold;
        padding:5px;
        margin-bottom:0px;
        text-align:center;
        
    }
</style>
<div class="container">
    @*<div class="mt-2 d-flex" style="justify-content:flex-end">
        <a asp-controller="product" asp-action="create" class="btn btn-success btn-icon-text">
            <i class="mdi mdi-upload btn-icon-prepend"></i>
            Create
        </a>
    </div>*@
    <table class="mt-3 table table-dark">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Country
                </th>
                <th>
                    Adress 1
                </th>
                <th>
                    Adress 2
                </th>
                <th>
                    Order Date
                </th>
                <th>
                    Total Price
                </th>
                <th>
                    Order Status
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Order order in Model)
            {
                <tr>
                    <td>
                        @order.Id
                    </td>
                    <td>
                        @order.Country
                    </td>
                    <td>
                        @order.Adress
                    </td>
                    <td>
                        @order.AdressSec
                    </td>
                    <td>
                        @order.OrderDate.ToString("dd MMMM,yyyy HH:mm")
                    </td>
                    <td>
                       $@((Math.Floor((double)(order.TotalPrice)*100)/100))
                    </td>
                    @if (order.Status == null)
                    {
                        <td class="status">
                            <p class="alert alert-primary">
                                Pending
                            </p>
                        </td>
                    }
                    else if (order.Status == true)
                    {
                        <td class="status">
                            <p class="alert alert-success"> 
                                Accepted
                            </p>
                        </td>
                    }
                    else
                    {
                        <td class="status">
                            <p class="alert alert-danger">
                                Declined
                            </p>
                        </td>
                    }
                    <td>
                        <a asp-controller="order" asp-action="edit" asp-route-id="@order.Id" class="btn btn-warning btn-icon-text">
                            <i class="mdi mdi-file-check btn-icon-append"></i>
                            Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(".delete-item").click(function (e) {
            e.preventDefault();

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    var link = $(this).attr("href");
                    fetch(link).then(response => response.json()).then(data => {
                        if (data.status == 200) {
                            location.reload(true)
                        }
                        else {
                            Swal.fire(
                                'categoty not found!',
                                'Your file can not be deleted.',
                                'Failed'
                            )
                        }
                    }

                    );

                }
            })
        })</script>
}