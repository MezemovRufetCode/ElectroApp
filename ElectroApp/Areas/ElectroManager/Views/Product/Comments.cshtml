@model List<ProductComment>
@{
    ViewData["Title"] = "Comments";
}

<div class="container">
    <h2 class="mt-3">Comments</h2>
    <table class="table table-dark mt-3">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    User Fullname
                </th>
                <th>
                    Text
                </th>
                <th>
                    Write date
                </th>
                <th>
                    Access
                </th>
                <th>
                    Settings
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comment in Model)
            {
                <tr>
                    <td>
                        @comment.Id
                    </td>

                    <td>
                        @*@comment.AppUser.Fullname*@
                    </td>
                    @if (comment.Text.Length > 30)
                    {
                        <td data-toggle="tooltip" data-placement="bottom" title="@comment.Text">
                            @comment.Text.Substring(0, 30)...
                        </td>
                    }
                    else
                    {
                        <td>
                            @comment.Text
                        </td>
                    }
                    <td>
                        @comment.WriteDate.ToString("dd MMMM yyyy HH:mm")
                    </td>
                    <td>
                        @comment.IsAccess
                    </td>
                    <td>
                        @if (!comment.IsAccess)
                        {
                            <a asp-controller="product" asp-action="CommentStatus" asp-route-id="@comment.Id" class="btn btn-success btn-icon-text">
                                Accept
                            </a>
                        }
                        else
                        {
                            <a asp-controller="product" asp-action="CommentStatus" asp-route-id="@comment.Id" class="btn btn-danger btn-icon-text">
                                Reject
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts{
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
}