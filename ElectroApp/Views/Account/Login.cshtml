@model LoginVM
@{
    ViewData["Title"] = "Login";
}
<body>
    <div id="loginPage">
        <section id="brdcrumb">
            <div class="container">
                <div class="row">
                    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <div class="display">
                                    <div class="syllabus">
                                        <a href="#">Home > Login</a>
                                    </div>
                                </div>
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </section>
        <section id="account">
            <div class="container">
                <div class="row">
                    <div class="account">
                        <div class="loginwrapper">
                            <div class="login">
                                <div class="heading">
                                    <h4 class="nameofdiv">Login</h4>
                                </div>
                                <div class="content">
                                    <div class="returnToStore">
                                        <p class="description">Welcome back! Sign in yo your account</p>
                                        <a href="">Return to Store</a>
                                    </div>
                                    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                                    <form method="post">
                                        <div class="inputwrapper">
                                            <label asp-for="Email">Email</label>
                                            <input asp-for="Email"><br />
                                            <span class="text text-danger" asp-validation-for="Email"></span>
                                        </div>
                                        <div class="inputwrapper">
                                            <label asp-for="Password">Password*</label>
                                            <input asp-for="Password"><br />
                                            <span class="text text-danger" asp-validation-for="Password"></span>
                                        </div>
                                        <div class="bottomlogin">
                                            <div class="" style="display:flex;align-items:center;">
                                                <input style="margin-right:5px;width:16px;height:16px;" asp-for="Remember" />
                                                <label style="margin-bottom:0px;" asp-for="Remember">Remember me</label>
                                            </div>
                                            <a asp-controller="account" asp-action="forgotpassword" class="forgonpass">Forgotten Password ?</a>
                                        </div>
                                        <input class="inpSubmit" type="submit" value="Login">
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    @*jquery*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
            integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    @*owl carousel*@
    <script src="~/plugins/OwlCarousel2-2.3.4/docs/assets/owlcarousel/owl.carousel.min.js"></script>
    @*----------------*@
    @*------progressbar----*@
    <script src="~/assets/JS/skill.bars.jquery.js"></script>
    @*-----------------*@
    <script src="~/assets/js/script.js"></script>
</body>
