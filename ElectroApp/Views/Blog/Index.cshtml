@*live search*@
<script>
    $(document).on("keyup", '#Blog-Search', function () {
        $("#New-Blogs").empty()
        if ($(this).val().length > 0) {
            $.ajax({
                url: '/Blog/Search',
                data: {
                    "search": $(this).val(),
                },
                type: "Get",
                success: function (res) {
                    $("#Old-Blogs").css("display", "none")
                    $("#New-Blogs").append(res)
                    $("#pgnt").css("display", "none")
                }
            })
        }
        else {
            $("#Old-Blogs").css("display", "flex")
            $("#pgnt").css("display", "flex")
        }
    })
</script>
