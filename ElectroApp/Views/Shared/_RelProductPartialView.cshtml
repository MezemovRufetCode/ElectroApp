@model List<Product>
@foreach (Product product in Model)
{
    <div class="productWrapper col-lg-2 col-md-3 col-sm-4 col-6">
        <div class="product">
            <div class="productContent">
                <div class="topProduct">
                    <p class="brandName"><a href="#">@product.Brand.Name</a></p>
                    <p class="productName"><a href="#">@product.Name</a></p>
                </div>
                <div class="productImage">
                    <div class="image">
                        @foreach (ProductImage image in product.ProductImages)
                        {
                            if (image.IsMain)
                            {
                                <a asp-controller="product" asp-action="index" asp-route-id="@product.Id">
                                    <img src="~/assets/images/featuredProducts/@image.Image" alt="">
                                </a>
                            }
                        }

                    </div>
                </div>
                <div class="bottomProduct">
                    <div class="contforBotPr">
                        <div class="productPrice">
                            @if (product.CampaignId == null)
                            {
                                <p class="CurrentPrice">$@product.Price</p>
                            }
                            else
                            {
                                <p class="CurrentPrice">$@(product.Price*(100-product.Campaign.DiscountPercent)/100)<span class="oldPrice">$@product.Price</span></p>
                            }

                        </div>
